{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>Refrigerantes en el documento excel</h1>
    {% if chartData is not null %}
        <div id="chart" data-controller="chart" data-chart-chart-data-value="{{ chartData|json_encode }}"></div>
        <div id="chart-container" style="width: 100%; height: 750px;"></div>
    {% else %}
        <p>No hay datos disponibles para mostrar el gr√°fico.</p>
    {% endif %}
    <ul>
        {% for zone, refrigerants in refrigerantData %}
            <h2>{{ zone }}</h2>
            <ul>
                {% for refrigerant, count in refrigerants %}
                    <li>{{ refrigerant }}: {{ count }} vez/veces</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </ul>
{% endblock %}
